<%-include ('layouts/admin-header.ejs') %>
<nav aria-label="breadcrumb">
     <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Ana Sayfa</a></li>
       <li class="breadcrumb-item active" aria-current="page">Kategoriler</li>
       
     </ol>
</nav>


<div class="container-fluid">
     <h3>Kategoriler</h3>
     <div class="row">
          <div class="col-md-4">
               <table class="table">
                    <tbody>
                      <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td class="text-end">
                             <a href="/admin/category/edit" class="btn btn-warning btn-sm"><i class="fas fa-eye"></i></a>
                         </td>
                      </tr>
                     
                    </tbody>
               </table>
          </div>
          <div class="col-md-8">             
               <div class="card bg-warning">
                    <form action="/admin/category/add" method="post"></form>
                         <div class="card-body">
                              <div class="row">
                                   <div class="col-sm-7">
                                        <input type="text" class="form-control" id="name" placeholder="Kategori Adı">
                                   </div>
                                   <div class="col-sm-3">
                                        <input type="number" class="form-control" id="seq" placeholder="Sıra">
                                   </div>
                                   <div class="col-sm-2">
                                        <button type="submit" class="btn btn-success w-100"><i class="fas fa-plus"></i> Ekle</button>
                                   </div>
                              </div>
                         
                         </div>
                    </form>
               </div>
          

          
               <div class="card mt-5">
                    <form action="/admin/category/update" method="post"></form>
                         <div class="card-header">
                              Güncelle
                         </div>
                         <div class="card-body">
                              <div class="mb-3">
                                   <label for="name" class="form-label">Adı</label>
                                   <input type="text" class="form-control" id="name">
                              </div>
                              <div class="mb-3">
                                   <label for="seq" class="form-label">Sıra</label>
                                   <input type="number" class="form-control" id="seq">
                              </div>
                         </div>
                         <div class="card-footer text-end">
                              <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Kaydet</button>
                              <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</button>
                         </div>
                    </form>
               </div>
               

               
          </div>
     </div> 

</div>


<%-include ('layouts/admin-footer.ejs') %>